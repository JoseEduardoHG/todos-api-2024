{
  "name": "todos-api-2024",
  "private": true,
  "version": "1.0.0",
  "description": "My very first REST API built with Node.js, Express, MongoDB & TypeScript.",
  "scripts": {
    "build": "webpack",
    "start": "node -r dotenv/config dist/index.js",
    "build:dev": "NODE_ENV=development webpack",
    "start:dev": "nodemon",
    "clean:build": "rm -rf dist",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "format": "prettier --write src",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/JoseEduardoHG/todos-api-2024.git"
  },
  "author": "JoseEduardoHG",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JoseEduardoHG/todos-api-2024/issues"
  },
  "homepage": "https://github.com/JoseEduardoHG/todos-api-2024#readme",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "release-it": "^17.0.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
